{
  "name": "llm-a11y-mcp-fixer",
  "version": "1.0.0",
  "type": "module",
  "description": "LLM-powered accessibility fixer using A11y MCP Server for intelligent WCAG compliance improvements",
  "keywords": [
    "llm",
    "ai",
    "accessibility",
    "a11y",
    "mcp",
    "model-context-protocol",
    "wcag",
    "color-contrast",
    "automated-fixes",
    "openai",
    "axe-core"
  ],
  "scripts": {
    "fix-accessibility": "node .github/scripts/llm-accessibility-fixer.js",
    "test-local": "node test-local.js",
    "setup": "npm install && npm install -g a11y-mcp-server",
    "demo": "node demo.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "github:your-org/your-repo"
  },
  "author": "Your Name",
  "license": "MIT",
  "config": {
    "llm": {
      "provider": "openai",
      "model": "gpt-4",
      "temperature": 0.1,
      "max_tokens": 4000
    },
    "a11y": {
      "mcp_server": "a11y-mcp-server",
      "wcag_level": "wcag2aa",
      "color_contrast": {
        "normal_text": 4.5,
        "large_text": 3.0
      },
      "auto_fix": {
        "color_contrast": true,
        "alt_text": true,
        "aria_attributes": true
      },
      "create_backups": true,
      "generate_reports": true
    }
  },
  "files": [
    ".github/scripts/",
    ".github/workflows/",
    "README.md",
    "ACCESSIBILITY_*.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}